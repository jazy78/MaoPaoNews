<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.hp.maopaonews.viewpager.TouTiaoViewPager
            android:id="@+id/toutiao_lunbo_viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone">

        </com.example.hp.maopaonews.viewpager.TouTiaoViewPager>

        <ImageView
            android:id="@+id/daohang_lunbo_yitu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/toutiao_lunbo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toutiao_lunbo_viewpager"

            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff0000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toutiao_lunboyitu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/daohang_lunbo_yitu"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff0000"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/toutiao_lunbo_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toutiao_lunbo_viewpager"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>